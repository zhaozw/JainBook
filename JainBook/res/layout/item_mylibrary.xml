<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/container_dropshadow"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageViewBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/light_gray_divider"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/book2" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageViewBook"
        android:layout_alignRight="@+id/imageViewBook"
        android:layout_below="@+id/imageViewBook"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="TextView"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/small_text_font_size" />

</RelativeLayout>