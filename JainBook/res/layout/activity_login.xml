<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/app_bg" 
    android:orientation="vertical"
   >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/login_container_side_margin"
        android:layout_marginRight="@dimen/login_container_side_margin"
       
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ImageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:padding="1dp"
            android:background="@drawable/linearlayout_bg"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editTextUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:ellipsize="end"
                android:ems="10"
                android:hint="string/email_id"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLines="1"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/normal_text_font_size" />

           <EditText
               android:id="@+id/editTextPassword"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="1dp"
               android:background="@color/transparent"
               android:ellipsize="end"
               android:ems="10"
               android:hint="string/email_id"
               android:inputType="textEmailAddress"
               android:lines="1"
               android:maxLines="1"
               android:padding="5dp"
               android:scrollHorizontally="true"
               android:textColor="@android:color/black"
               android:textCursorDrawable="@null"
               android:textSize="@dimen/normal_text_font_size" />

        </LinearLayout>

        <com.jainbooks.utils.JainButton
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="6dp"
            android:paddingBottom="30dp"
            android:text="string/log_in"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_text_font_size" />

        <com.jainbooks.utils.JainTextView
            android:id="@+id/forgotPasswordLink"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="string/forgotPasswordLink"
            android:textSize="@dimen/normal_text_font_size" />

        <com.jainbooks.utils.JainButton
            android:id="@+id/signUpLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="Signup"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_text_font_size" />

		 <LinearLayout
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content" 
		     android:weightSum="2"
		     android:layout_marginTop="10dp">

		     <com.jainbooks.utils.JainButton
		         android:id="@+id/jainButton1"
		         android:layout_width="match_parent"
		         android:layout_height="wrap_content"
		         android:layout_marginRight="1dp"
		         android:layout_weight="1"
		         android:text="JainButton"
		         android:textSize="@dimen/normal_text_font_size" />

		     <com.jainbooks.utils.JainButton
		         android:id="@+id/jainButton2"
		         android:layout_width="match_parent"
		         android:layout_height="wrap_content"
		         android:layout_marginLeft="1dp"
		         android:layout_weight="1"
		         android:text="JainButton"
		         android:textSize="@dimen/normal_text_font_size" />

		 </LinearLayout>
       
    </LinearLayout>

</RelativeLayout>