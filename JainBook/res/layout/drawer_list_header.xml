<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/header_gray"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewDrawerHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/layout_padding_small"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textStyle="bold"
        android:paddingTop="@dimen/layout_padding_small"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="#fff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/header_underline" />

</LinearLayout>