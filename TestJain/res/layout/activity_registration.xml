<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:shadowColor="@color/light_gray_divider"
    android:shadowRadius="2" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_padding_medium"
        android:paddingRight="@dimen/layout_padding_medium" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/layout_padding_medium"
            android:shadowColor="@color/light_gray_divider"
            android:shadowRadius="2"
            android:text="Registor to Continue!"
            android:textColor="@color/black"
            android:textSize="@dimen/order_details_padding_large"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/container_dropshadow"
            android:shadowColor="@color/black"
    android:shadowRadius="2" >

            <EditText
                android:id="@+id/editTextLoginUsername"
                style="@android:style/Theme.Holo.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:ems="10"
                android:hint="Username"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:padding="@dimen/layout_padding_medium"
                android:scrollHorizontally="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/header_text_font_size" >

            </EditText>
<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black" />
            <EditText
                android:id="@+id/editTextLoginPassword"
                style="@android:style/Theme.Holo.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:padding="@dimen/layout_padding_medium"
                android:scrollHorizontally="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/header_text_font_size" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_padding_medium"
        android:paddingRight="@dimen/layout_padding_medium" >

        <com.jainbooks.utils.JainButton
            android:id="@+id/buttonRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/layout_padding_medium"
            android:shadowColor="@color/light_gray_divider"
            android:shadowRadius="2"
            android:text="Register"
            android:onClick="register"
            android:textColor="@color/black"
            android:textSize="@dimen/order_details_padding_large"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>